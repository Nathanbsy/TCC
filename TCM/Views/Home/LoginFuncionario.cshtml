@model TCM.Models.Funcionario

@{
    ViewData["Title"] = "Login";
}


<main role="main">
    <br />
    <br />
    <section class="container">
        <aside class="col-sm-4">
            <h3 class="subtitle-doc">
                Primeiro Acesso
            </h3>
            <div id="code_login_1">
                <div class="card">
                    <article class="card-body">
                        @if (ViewData["msg"] != null)
                        {
                            @* O HTML Raw pode ser usado para: Procurar e baixar páginas HTML, Procurar e baixar cabeçalhos.*@
                            <p class="alert alert-danger">@Html.Raw(ViewData["msg"])</p>
                        }

                        <h4 class="card-title mb-4 mt-1">Entrar</h4>
                        <form method="post">
                            <div class="form-group">
                                <label>E-mail</label>
                                <input asp-for="usuario" class="form-control" placeholder="Usuario" type="text">
                            </div>
                            <div class="form-group">
                                <label>Senha</label>
                                <input asp-for="senha" class="form-control" placeholder="Senha" type="password">
                            </div>
                            <br />
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-block"> Login </button>

                            </div>
                        </form>
                    </article>
                </div>
            </div>
        </aside>
    </section>
</main>