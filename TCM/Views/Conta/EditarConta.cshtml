@using System.Security.Claims
@{
    ViewData["Title"] = "Meus Dados";
}

@model TCM.Models.Usuario
<div style="display: flex; justify-content: center; align-items: center;">
    <h2>Seus Dados</h2>
</div>


<div class="container-formulario">
    <form class="formulario" asp-action="EditarConta" enctype="multipart/form-data" method="post">
        <div asp-validation-summary="ModelOnly"></div>

        <div class="formulario-inputs">
            <input asp-for="IdLogin" readonly hidden />
            <span asp-validation-for="IdLogin"></span>
        </div>

        <div class="formulario-inputs">
            <label>Nome</label>
            <input asp-for="Nome" required />
            <span asp-validation-for="Nome"></span>
        </div>

        <div class="formulario-inputs">
            <label>Usuario</label>
            <input asp-for="usuario" type="text" required />
            <span asp-validation-for="usuario"></span>
        </div>

        <div class="formulario-inputs">
            <label>Email</label>
            <input asp-for="email" type="email" required />
            <span asp-validation-for="email"></span>
        </div>
        <div class="formulario-inputs">
            <label>Senha</label>
            <input asp-for="senha" type="password" required />
            <span asp-validation-for="senha"></span>
        </div>
        <div class="formulario-inputs">
            <label>Foto de Perfil</label>
            <input type="file" name="imagem"/>
        </div>

        <div class="formulario-botao">
            <button class="btn-comprar-f" type="submit">Editar</button>
        </div>
    </form>
</div>